{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    
    // Support both browser and Node.js
    "types": ["node"],
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/*"]
    }
  },
  "include": [
    "assets/**/*",
    "vite.config.ts"
  ]
}